<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent">
    <videochat.ju.com.videochat.RemotePreview
        android:id="@+id/remote_preview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />



    <videochat.ju.com.videochat.CameraPreviewGlSurface
        android:layout_width="640px" android:id="@+id/camera_preview"
        android:layout_height="360px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />
    <Button
        android:layout_width="200px" android:visibility="gone"
        android:layout_height="200px" android:id="@+id/bt_test" android:text="测试码流" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:focusable="true"/>
</RelativeLayout>
